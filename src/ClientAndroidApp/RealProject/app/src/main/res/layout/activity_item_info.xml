<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Items.ItemInfo">

    <Button
        android:id="@+id/button_items_back"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="OnClickInfo"
        android:text="Items"
        android:textAllCaps="false"

        android:textColor="@color/darkGrey"
        app:layout_constraintStart_toEndOf="@+id/imageView_Chevron_left_info"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_edit_item"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="OnClickInfo"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/darkGrey"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_Chevron_left_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_chevron_left_24" />

    <ImageView
        android:id="@+id/imageView_edititem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picture_lightbuldyellow" />

    <TextView
        android:id="@+id/textView_appliance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Dans Room"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_edititem" />

    <Button
        android:id="@+id/button_add_to_combo"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:layout_marginTop="53dp"
        android:text="Add to combo"
        android:textAllCaps="false"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_appliance_name" />

    <Button
        android:id="@+id/button_set_timer"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="Set timer"
        android:textAllCaps="false"

        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_to_combo" />

    <TextView
        android:id="@+id/textView_notes"
        android:layout_width="275dp"
        android:layout_height="137dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/text_view_border"
        android:text="   Notes"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_set_timer" />



</androidx.constraintlayout.widget.ConstraintLayout>